# Skidmark Bot Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Discord Configuration
# ===================

# Discord bot token (from Discord Developer Portal)
BOT_CLIENT_TOKEN=your_discord_bot_token_here

# Discord bot user ID (the bot's user ID, not application ID)
DISCORD_BOT_ID=your_bot_user_id_here

# Channel where the bot posts race summaries and general announcements
# Production channel (Skidmark Tour Discord)
PROD_GENERAL_CHANNEL=your_prod_channel_id

# Development channel for testing
DEV_GENERAL_CHANNEL=your_dev_channel_id

# Comma-separated list of channel IDs reserved for dev bot
# All other channels default to prod bot
ALLOWED_DEV_CHANNELS=channel_id_1,channel_id_2

# ===================
# API Configuration
# ===================

# Gemini API key (from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here

# Skidmark Tour API base URL (Django backend on Railway)
SKIDMARK_API=https://your-api-url.up.railway.app

# API token for authenticating webhook requests to this bot
BOT_SERVER_TOKEN=your_secure_random_token_here

# ===================
# Database
# ===================

# PostgreSQL connection string (read-only access to race data)
DATABASE_URL=postgresql://user:password@host:port/database

# ===================
# Environment
# ===================

# Environment mode: 'dev' or 'production'
# - dev: Bot responds only in ALLOWED_DEV_CHANNELS
# - production: Bot responds in all channels except ALLOWED_DEV_CHANNELS
NODE_ENV=dev
